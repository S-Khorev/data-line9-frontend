<h3 class="ui header">{{t "forms.data-line-data-line9-resource-usage-spec-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.name
      class=(if (v-get validationObject "name" "isInvalid") "error")
      label=(t "forms.data-line-data-line9-resource-usage-spec-e.name-caption")
      data-test-data-line-data-line9-resource-usage-spec-e-----=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "name" "messages")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.value
      class=(if (v-get validationObject "value" "isInvalid") "error")
      label=(t "forms.data-line-data-line9-resource-usage-spec-e.value-caption")
      data-test-data-line-data-line9-resource-usage-spec-e------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "value" "messages")}}
  </div>
  <div class="field">
    <label>{{t "forms.data-line-data-line9-resource-usage-spec-e.map-caption"}}</label>
    {{flexberry-checkbox
      readonly=readonly
      value=model.map
      data-test-data-line-data-line9-resource-usage-spec-e----=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "map" "messages")}}
  </div>

  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.unit
      class=(if (v-get validationObject "unit" "isInvalid") "error")
      label=(t "forms.data-line-data-line9-resource-usage-spec-e.unit-caption")
      data-test-data-line-data-line9-resource-usage-spec-e-----=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "unit" "messages")}}
  </div>
  <div class="field">
    <label>{{t "forms.data-line-data-line9-resource-usage-spec-e.type-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.type
      relationName="type"
      projection="characteristic_typeL"
      title=(t "forms.data-line-data-line9-resource-usage-spec-e.type-caption")
      readonly=readonly
      componentName="typeLookup"
      data-test-data-line-data-line9-resource-usage-spec-e-----=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "type" "messages")}}
  </div>

  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.type.regex
      class=(if (v-get validationObject "type.regex" "isInvalid") "error")
      label=(t "forms.data-line-data-line9-resource-usage-spec-e.type.regex-caption")
      data-test-data-line-data-line9-resource-usage-spec-e-----------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "type.regex" "messages")}}
  </div>
  <div class="field">
    <label>{{t "forms.data-line-data-line9-resource-usage-spec-e.resource_spec_id-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.resource_spec_id
      relationName="resource_spec_id"
      projection="resource_specL"
      title=(t "forms.data-line-data-line9-resource-usage-spec-e.resource_spec_id-caption")
      readonly=readonly
      componentName="resource_spec_idLookup"
      data-test-data-line-data-line9-resource-usage-spec-e-----------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "resource_spec_id" "messages")}}
  </div>

  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.resource_spec_id.enum
      class=(if (v-get validationObject "resource_spec_id.enum" "isInvalid") "error")
      label=(t "forms.data-line-data-line9-resource-usage-spec-e.resource_spec_id.enum-caption")
      data-test-data-line-data-line9-resource-usage-spec-e----------------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "resource_spec_id.enum" "messages")}}
  </div>
</form>